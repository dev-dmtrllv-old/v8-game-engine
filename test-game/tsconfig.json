{
	"compilerOptions": {
		"allowJs": false,
		"esModuleInterop": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"baseUrl": "./src",
		"outDir": "../out/assets/scripts",
		"lib": [
			"ES6"
		],
		"typeRoots": [
			"./lib"
		],
		"paths": {
			"scenes/*": [
				"scenes/*"
			]
		},
		"noImplicitUseStrict": true,
		"alwaysStrict": false,
		"types": [],
		"target": "ES6",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"removeComments": true,
	}
}
